<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeijooJLayouts.GridLayout"
             Title="Grid Page">

    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
        
        <BoxView Color="Red" Grid.Row="0" Grid.Column="0" />

        
        <BoxView Color="Green" Grid.Row="0" Grid.Column="1" />

        
        <BoxView Color="Blue" Grid.Row="1" Grid.Column="0" />

       
        <StackLayout Grid.Row="1" Grid.Column="1" BackgroundColor="Yellow"
                     VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Ir a StackLayout" Clicked="OnButtonClicked" />
        </StackLayout>
    </Grid>

</ContentPage>
