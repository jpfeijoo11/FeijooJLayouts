<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeijooJLayouts.Stack"
             Title="Stack">
    <StackLayout Orientation="Vertical" Spacing="80">
        <Label 
            Text="Juan"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Pablo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Feijoo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Arpi"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            x:Name="BotonIrFlex"
            Text="Ir a Flex Layout"
            Clicked="BotonIrFlex_Clicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>