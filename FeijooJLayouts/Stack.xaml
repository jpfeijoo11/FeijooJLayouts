<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeijooJLayouts.Stack"
             Title="Stack">
    <StackLayout Orientation="Vertical" Spacing="60">
        <Label 
            Text="Juan"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="DarkBlue"
            FontSize="26"
            BackgroundColor="Beige"/>
        <Label 
            Text="Pablo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="Magenta"
            FontSize="20"
            BackgroundColor="BlanchedAlmond"/>
        <Label 
            Text="Feijoo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="Green"
            FontSize="25"
            BackgroundColor="LightCoral"/>
        <Label 
            Text="Arpi"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="Turquoise"
            FontSize="30"
            BackgroundColor="Black"/>
        <Button
            x:Name="BotonIrFlex"
            Text="Ir a Flex Layout"
            Clicked="BotonIrFlex_Clicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>