<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeijooJLayouts.FlexLayout"
             Title="FlexLayout">
    <StackLayout  Orientation="Vertical" Spacing="80">
        <Label 
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ScrollView>
            <FlexLayout
         Direction="Row"
         Wrap="Wrap"
         JustifyContent="Center"
         AlignItems="Center"
         Margin="20"
         AlignContent="Center"
         >

                <Image Source="imagen1.png" WidthRequest="100" HeightRequest="50" Margin="10"/>
                <Image Source="imagen2.png" WidthRequest="100" HeightRequest="50" Margin="10"/>
                <Image Source="imagen3.png" WidthRequest="100" HeightRequest="50" Margin="10"/>
                <Image Source="imagen4.png" WidthRequest="100" HeightRequest="50" Margin="10"/>

            </FlexLayout>
        </ScrollView>
        <Button
            x:Name="BotonIrAbsolute"
            Text="Ir a Absolute Layout"
            Clicked="BotonIrAbsolute_Clicked"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
    </StackLayout>
   
</ContentPage>